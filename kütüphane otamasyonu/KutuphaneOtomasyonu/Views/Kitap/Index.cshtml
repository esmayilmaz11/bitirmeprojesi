@model IEnumerable<KutuphaneOtomasyonu.Models.Kitap>

@{
    ViewBag.Title = "Kitaplar";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body style="margin-top: 30px;">
    <p>
        @Html.ActionLink("Yeni Kitap Ekle", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.kitapAd)*@
                Kitap Adı
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.kitapStok)*@
                Stok Durumu
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Tur.turAd)*@
                Türü
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.YayinEvi.yayineviAd)*@
                Yayın Evi Adı
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Yazar.yazarAd)*@
                Yazar Adı
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.kitapAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kitapStok)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tur.turAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YayinEvi.yayineviAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Yazar.yazarAd)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.kitapID }) |
                @Html.ActionLink("Detaylar", "Details", new { id = item.kitapID }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.kitapID })
            </td>
        </tr>
            }
    
    </table>
</body>
</html>
